<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="${basedir}/../../../../artifacts/logs/internal-nlog.txt">

  <!-- Enable ASP.NET Core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="e2e_tests"/>
  </extensions>

  <!-- Define targets -->
  <targets>
    <!-- File Target for all logs with rolling file -->
    <target xsi:type="File" name="allfile"
            fileName="${basedir}/../../../../artifacts/logs/opentelwatcher-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="${basedir}/../../../../artifacts/logs/archives/opentelwatcher-all-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            keepFileOpen="false" />

    <!-- File Target for own logs with rolling file -->
    <target xsi:type="File" name="ownfile"
            fileName="${basedir}/../../../../artifacts/logs/opentelwatcher-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
            archiveFileName="${basedir}/../../../../artifacts/logs/archives/opentelwatcher-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            keepFileOpen="false" />

    <!-- File Target for errors only -->
    <target xsi:type="File" name="errorfile"
            fileName="${basedir}/../../../../artifacts/logs/opentelwatcher-errors-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
            archiveFileName="${basedir}/../../../../artifacts/logs/archives/opentelwatcher-errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            keepFileOpen="false" />

    <!-- Console Target for development -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- TestContext Target for xUnit test output -->
    <target xsi:type="TestContext" name="testcontext"
            layout="${longdate}|${level:uppercase=true}|${logger:shortName=true}|${message}${onexception:${newline}${exception:format=tostring}}" />
  </targets>

  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- All logs, including from Microsoft -->
    <logger name="*" minlevel="Info" writeTo="allfile" />

    <!-- Skip non-critical Microsoft logs and write to own file -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- Application logs -->
    <logger name="OpenTelWatcher.*" minlevel="Debug" writeTo="ownfile" />

    <!-- Error logs -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- Console output for development (warnings and errors only to reduce test verbosity) -->
    <logger name="*" minlevel="Warn" writeTo="console" />

    <!-- TestContext output for xUnit tests (warnings and errors only to keep test output clean) -->
    <logger name="*" minlevel="Warn" writeTo="testcontext" />
  </rules>
</nlog>
